/**app.wxss**/
.container-wrapper {
  background: #fff;
  min-height: 100vh;
}
.home-logo {
  height: 200px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.query-area {
  position: relative;
  padding: 12px;
}

.query-input-wrapper {
  position: relative;
}

.scan-icon {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
}
.query-input-wrapper .van-field__control {
  font-size: 18px;
  color: #222;
}
.query-input-wrapper .field-index--van-field {
  padding: 16px 16px 16px 0 !important;
}



.query-btn-wrapper {
  padding: 24px 12px;
}


.query-btn-wrapper.in-btn .van-button--primary{
  background: #15997c;
}

.result-area {
  font-size: 42px;
  color: #07c160;
  height: 32vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
.admin-wrapper {
  position: fixed;
  right: 16px;
  bottom: 36px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 64px;
  height: 64px;
  border-radius: 50%;
  box-shadow: 2px 2.5px 8px 0px rgba(90, 211, 148, 0.4);
  background: linear-gradient(0deg, rgba(90, 211, 148, 1), rgba(72, 224, 145, 1));
  color: #fff;
  font-size: 16px;
}
.menu-wrapper {
  padding: 24px;
  display: flex;
}
.menu-item {
  color: #fff;
  font-size: 16px;
  background: #07c160;
  flex: 1;
  border-radius: 4px;
  height: 48px;
  padding: 12px;
}
.menu-item:nth-child(2n){
  color: #fff;
  font-size: 16px;
  background: #15997c;
  margin-left: 12px;
}
.menu-item-info {
  font-size: 12px;
  margin-top: 4px;
}